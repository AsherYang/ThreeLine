<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vtv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_fafafa"
    android:isScrollContainer="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.asher.threeline.ui.view.VerticalTextView
            android:id="@+id/vtv_sentence_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="27dp"
            android:text="--《山月》席慕容--\n 曾踏月而来,\n只因您在山中,\n山风拂发,\n拂颈,拂裸露的肩膀\n而月光衣我以华裳。"
            android:textColor="@color/color_1d1f3e"
            android:textSize="15sp"
            vtv:textDirection="UP_TO_DOWN" />

    </ScrollView>
</LinearLayout>
