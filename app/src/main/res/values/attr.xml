<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="statusBarColor" format="color" />
        <!--activity标题背景颜色-->
        <attr name="titleBarColor" format="color" />
        <!--activity标题高度-->
        <attr name="titleBarTitleHeight" format="dimension" />
        <!--activity标题文字-->
        <attr name="titleBarTitle" format="string" />
        <!--activity标题文字颜色-->
        <attr name="titleBarTextColor" format="color" />
        <!--activity标题文字大小-->
        <attr name="titleBarTextSize" format="dimension" />
        <!--左侧-->
        <attr name="leftText" format="string" />
        <attr name="leftImgDrawable" format="reference|color" />
        <!--右侧-->
        <attr name="rightText" format="string" />
        <attr name="rightImgDrawable" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="MusicView">
        <!--颜色-->
        <attr name="android:color" />
        <!--间隔大小-->
        <attr name="intervalSize" format="dimension" />
        <!--每条竖线的宽度-->
        <attr name="lineWidth" format="dimension" />
    </declare-styleable>
</resources>