<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="statusBarColor" format="color" />
        <!--activity标题背景颜色-->
        <attr name="titleBarColor" format="color" />
        <!--activity标题高度-->
        <attr name="titleBarTitleHeight" format="dimension" />
        <!--activity标题文字-->
        <attr name="titleBarTitle" format="string" />
        <!--activity标题文字颜色-->
        <attr name="titleBarTextColor" format="color" />
        <!--activity标题文字大小-->
        <attr name="titleBarTextSize" format="dimension" />
        <!--左侧-->
        <attr name="leftText" format="string" />
        <attr name="leftImgDrawable" format="reference|color" />
        <!--右侧-->
        <attr name="rightText" format="string" />
        <attr name="rightImgDrawable" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="VerticalTextView">
        <attr name="textDirection" format="enum">
            <enum name="UP_TO_DOWN" value="0" />
            <enum name="DOWN_TO_UP" value="1" />
            <enum name="LEFT_TO_RIGHT" value="2" />
            <enum name="RIGHT_TO_LEFT" value="3" />
        </attr>
    </declare-styleable>
</resources>